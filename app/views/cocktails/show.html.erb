<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h2 class="fst-italic">Ingredients</h2>
  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item dose-list-item">
        <p><%= dose.description %> - <%= dose.ingredient.name %></p>
        <%= link_to(dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient?"}) do %>
          (delete)
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>
</div>
