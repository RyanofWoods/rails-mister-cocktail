<div class="container">
  <h1>Our cocktails!</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-6 col-md-4 col-lg-3">
        <%= link_to(cocktail_path(cocktail), class: "card-link") do %>
          <div class="card p-3" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
            <h4><%= cocktail.name %></h4>
          </div>
        <% end %> 
      </div>
    <% end %>
  </div>
</div>




